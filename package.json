{
  "name": "forgeai",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "check": "tsc --noEmit",
    "check:architecture": "tsx src/agent/validation/check-architecture.ts",
    "check:v1-ready": "tsx src/agent/validation/check-v1-ready.ts",
    "agent:validate-run": "tsx -r dotenv/config src/scripts/agent-validate-run.ts",
    "test:validation": "tsx --test src/agent/validation/__tests__/ast-validator.test.ts src/agent/validation/__tests__/security-validator.test.ts src/agent/validation/__tests__/failure-parser.test.ts",
    "test:validation-ast": "tsx --test src/agent/validation/__tests__/ast-validator.test.ts",
    "test:agent-state": "tsx -r dotenv/config --test src/agent/__tests__/run-service.test.ts",
    "test:agent-kernel": "tsx -r dotenv/config --test src/agent/__tests__/kernel-run-flow.test.ts"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "pg": "^8.13.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^22.13.4",
    "@types/pg": "^8.11.11",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2"
  }
}
