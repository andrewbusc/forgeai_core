{
  "name": "deeprun",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "check": "tsc --noEmit",
    "check:architecture": "tsx src/agent/validation/check-architecture.ts",
    "check:v1-ready": "tsx src/agent/validation/check-v1-ready.ts",
    "agent:validate-run": "tsx -r dotenv/config src/scripts/agent-validate-run.ts",
    "test:validation": "tsx --test src/agent/validation/__tests__/ast-validator.test.ts src/agent/validation/__tests__/security-validator.test.ts src/agent/validation/__tests__/failure-parser.test.ts src/agent/validation/__tests__/graph-builder.test.ts src/agent/validation/__tests__/project-validator.test.ts src/agent/validation/__tests__/structural-validator.test.ts src/agent/validation/__tests__/test-contract-validator.test.ts src/agent/validation/__tests__/heavy-validator.test.ts src/agent/validation/__tests__/canonical-backend-fixture.test.ts src/agent/validation/__tests__/check-architecture.test.ts src/agent/validation/__tests__/check-v1-ready.test.ts",
    "test:validation-ast": "tsx --test src/agent/validation/__tests__/ast-validator.test.ts",
    "test:agent-state": "tsx -r dotenv/config --test src/agent/__tests__/run-service.test.ts",
    "test:agent-kernel": "tsx -r dotenv/config --test src/agent/__tests__/kernel-run-flow.test.ts src/agent/correction/__tests__/failure-classifier.test.ts src/agent/correction/__tests__/policy-engine.test.ts",
    "test:server-routes": "tsx -r dotenv/config --test src/__tests__/project-mutation-routes.test.ts",
    "test:server-agent-state": "tsx -r dotenv/config --test src/__tests__/agent-state-routes.test.ts",
    "test:server-agent-kernel": "tsx -r dotenv/config --test src/__tests__/agent-kernel-routes.test.ts",
    "test:server-all": "npm run test:server-routes && npm run test:server-agent-state && npm run test:server-agent-kernel",
    "test:bootstrap": "npm run test:server-agent-kernel && npm run test:cli",
    "test:providers": "tsx --test src/lib/__tests__/providers.test.ts",
    "test:benchmark": "tsx --test src/scripts/__tests__/reliability-benchmark.test.ts",
    "test:ci": "npm run check && npm run test:providers && npm run test:benchmark && npm run test:validation && npm run test:agent-state && npm run test:agent-kernel && npm run test:server-routes && npm run test:server-agent-state && npm run test:bootstrap",
    "test:v1-ready": "npm run prepare:v1-ready-target -- --output .deeprun/v1-ready-target && npm run check:v1-ready -- .deeprun/v1-ready-target",
    "test:deployment-dry-run": "npm run prepare:v1-ready-target -- --output .deeprun/deployment-dry-run-target && npm run check:v1-ready -- .deeprun/deployment-dry-run-target",
    "benchmark:reliability": "tsx -r dotenv/config src/scripts/reliability-benchmark.ts",
    "prepare:v1-ready-target": "tsx src/scripts/prepare-v1-ready-target.ts",
    "deeprun": "tsx -r dotenv/config src/scripts/deeprun-cli.ts",
    "test:cli": "tsx -r dotenv/config --test src/__tests__/deeprun-cli.test.ts"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "pg": "^8.13.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^22.13.4",
    "@types/pg": "^8.11.11",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2"
  }
}
